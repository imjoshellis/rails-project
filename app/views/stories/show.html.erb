<section class='section'>
  <div class='container'>
    <nav class="panel">
      <p class="panel-heading"> Story: <%= @story.name %> </p>
        <div href="" class="panel-block flex flex-row justify-between">
            <div class="">
              <% case @story.status %>
              <% when "doing" %>
                <span class="tag is-warning">doing</span>
              <% when "closed" %>
                <span class="tag is-success">closed</span>
              <% when "todo" %>
                <span class="tag is-danger">todo</span>
              <% end %> 
            </div>
            
          <div class="buttons">
            <%= link_to "Edit", edit_sprint_story_path(@story.sprint, @story), class: "button is-primary is-small is-light" %>
            <%= link_to "Delete", sprint_story_path(@story.sprint, @story), method: :delete, data: { confirm: "Are you sure you want to delete \"#{@story.name}?\"" }, class: "button is-danger is-small is-light" %>
          </div></div>
        <div href="" class="panel-block flex flex-row justify-between">
        <% if @story.description %>
          <%= @story.description %>
        <% else %>
          No description
        <% end %>
        </div>
    </nav>
    <%= link_to "< Back to sprint ("+@story.sprint.name+")", project_sprint_path(@story.sprint.project, @story.sprint), class: "button" %>
  </div>
</section>