  <div class="flex flex-row justify-between">
    <div class="field flex-grow mr-4">
      <div class="control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input" %>
      </div>
    </div>
      
    <div class="field mr-4">
      <div class="control">
        <%= f.label :project, class: "label" %>
        <div class="select">
          <%= f.select :project_id, Project.all.collect{|p| [p.name, p.id]} %>
        </div>
      </div>
  </div>
  
    <div class="field">
      <div class="control">
        <%= f.label :sprint, class: "label" %>
        <div class="select">
          <%= f.select :sprint_id, Sprint.all.collect{|s| [s.project.name + ": " + s.name, s.id]}, { include_blank: true } %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="control">
    <%= f.label :description, class: "label" %>
      <%= f.text_area :description, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <div class="is-grouped control">
    <%= link_to "Cancel", :back, class: "button is-link is-outlined is-danger"  %>
    <%= f.submit "Save", class: "button is-link" %>
    </div>
  </div>
