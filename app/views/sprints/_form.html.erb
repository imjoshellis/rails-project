  <div class="flex flex-row justify-between">
  <div class="field flex-grow mr-4">
    <div class="control">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field mr-4">
    <div class="control">
      <%= f.label :project_id, class: "label" %>
      <div class="select">
        <%= f.select :project_id, Project.all.collect{|p| [p.name, p.id]} %>
      </div>
    </div>
  </div>
  <div class="field mr-4">
    <div class="control">
      <%= f.label :start_date, class: "label" %>
      <div class="select">
        <%= f.date_field :start_date %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.label :end_date, class: "label" %>
      <div class="select">
        <%= f.date_field :end_date %>
      </div>
    </div>
  </div>
  </div>
<div class="field">
  <div class="control">
  <%= f.label :goal_ids, class: "label" %>
  <% @goals.each do |g| %>
    <div class="control">
    <% if @sprint.goals.include?(g) %>
      <%= f.check_box :goal_ids, { :multiple => true, :checked => true }, g.id, false %> <%= g.name %>
    <% else %>
      <%= f.check_box :goal_ids, { :multiple => true }, g.id, false %> <%= g.name %>
    <% end %>
    </div>
  <% end %>
  </div>
</div>

<div class="field">
  <div class="is-grouped control">
  <%= link_to "Cancel", :back, class: "button is-link is-outlined is-danger"  %>
  <%= f.submit "Save", class: "button is-link" %>
  </div>
</div>